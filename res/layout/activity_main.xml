<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/lbl_key_phrase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/key_phrase" />
        
    <EditText
        android:id="@+id/key_phrase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/key_phrase" />

    <Button
        android:id="@+id/set_key_phrase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="setKeyPhrase"
        android:text="@string/set_key_phrase" />

</LinearLayout>